<%- include('layouts/main') %>

<div class="flex items-center justify-center min-h-screen w-1/2 mx-auto">
  <div class="max-w-3xl w-full mx-auto"> 
    <img src="../logo.png" class="w-1/3 mx-auto">
    <div class="bg-gray-900 rounded-lg shadow-md p-6">
      <form action="/chat/new" method="POST">
        <div class="mb-4">
          <label class="block text-gray-400 mb-2" for="model">Select Model:</label>
          <select id="model" name="model" class="w-full p-2 bg-gray-800 border border-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <% models.forEach(model => { %>
              <option value="<%= model.name %>"><%= model.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-4">
          <label class="block text-gray-400 mb-2" for="systemPrompt">System Prompt (Optional):</label>
          <textarea id="systemPrompt" name="systemPrompt" rows="3" class="w-full p-2 bg-gray-800 border border-gray-700 rounded text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter a system prompt to guide the model's behavior..."></textarea>
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded transition duration-200 w-full">
          Start Chat
        </button>
      </form>
    </div>
  </div>
</div>
